{% if previousPage or nextPage %}
	<nav class="comic-navigation">
		<ol>
			{% if previousPage %}
				<li class="first-page">
					<a href="{{firstPage.url}}#content">First</a>
				</li>
				<li class="previous-page">
					<a href="{{previousPage.url}}#content">Previous</a>
				</li>
			{% endif %}
			{% if nextPage %}
				<li class="next-page">
					<a href="{{nextPage.url}}#content">Next</a>
				</li>
				<li class="last-page">
					<a href="{{lastPage.url}}#content">Last</a>
				</li>
			{% endif %}
		</ol>
	</nav>
{% endif %}