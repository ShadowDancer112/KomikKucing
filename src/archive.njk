---
layout: base.njk
---

{% set chapterMap = {
  "ch1": "Chapter 1",
  "ch2": "Chapter 2"
} %}

<h1>Archive</h1>

{% set coll = collections.comicPages | sortPagesByDirectory %}
{% for chapter, chapterPages in coll %}
  <h2>{{ chapterMap[chapter] or chapter }}</h2>
  <ol>
    {% for comicPage in chapterPages %}
      <li>
        <a href="{{ comicPage.url }}">{{ comicPage.data.title or comicPage.filePathStem }}</a>
      </li>
    {% endfor %}
  </ol>
{% endfor %}